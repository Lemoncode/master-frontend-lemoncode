{
  "name": "playground-typescript",
  "version": "1.0.0",
  "description": "Master frontend Lemoncode, playground to play with Typescript code snippets",
  "keywords": [
    "lemoncode",
    "master",
    "javascript",
    "typescript"
  ],
  "homepage": "https://github.com/Lemoncode/master-frontend-lemoncode/tree/master/02-languages",
  "bugs": {
    "url": "https://github.com/Lemoncode/master-frontend-lemoncode/issues"
  },
  "license": "MIT",
  "author": "Lemoncode",
  "contributors": [
    "Javier Calzado <javi.calzado@lemoncode.net> (https://github.com/fjcalzado)",
    "Santiago Camargo <santi.camargo@lemoncode.net> (https://github.com/crsanti)",
    "Antonio Contreras <antonio.contreras@lemoncode.net> (https://github.com/antonio06)"
  ],
  "main": "index.html",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lemoncode/master-frontend-lemoncode.git"
  },
  "scripts": {
    "prestart": "npm run transpile && npm run copy",
    "start": "concurrently \"npm:transpile -- --watch\" npm:devserver",
    "copy": "copyfiles --flat src/**/*.{html,css} transpiled",
    "transpile": "tsc --pretty",
    "devserver": "browser-sync start -c bs-config.json"
  },
  "dependencies": {
    "browser-sync": "^3.0.4"
  },
  "devDependencies": {
    "concurrently": "latest",
    "copyfiles": "^2.x",
    "typescript": "latest"
  }
}
