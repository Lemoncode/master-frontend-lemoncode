{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "scenes": ["src/scenes"],
      "scenes/*": ["src/scenes/*"],
      "core": ["src/core"],
      "core/*": ["src/core/*"]
    }
  },
  "include": ["src"]
}
