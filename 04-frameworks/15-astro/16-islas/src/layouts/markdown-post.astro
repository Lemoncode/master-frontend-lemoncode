---
import BaseLayout from "./base.astro";

interface Frontmatter {
  layout: string;
  title: string;
  pubDate: string;
  description: string;
  author: string;
  image: {
    url: string;
    alt: string;
  };
  tags: string[];
}

const { frontmatter } = Astro.props as { frontmatter: Frontmatter };
---

<BaseLayout pageTitle={frontmatter.title}>
  <p>Written by {frontmatter.author}</p>
  <slot />
</BaseLayout>
