{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "noLib": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src/**/*", "./vite-env.d.ts", "./config/test/config.d.ts", ]
}
